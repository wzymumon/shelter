<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<!--admin-->
<mapper namespace="com.example.shelter.mapper.AdminMapper">
    <resultMap id="adminMap" type="com.example.shelter.model.Admin">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="password" column="password"/>
    </resultMap>
<!--    查询整个表-->
    <select id="selectAll" resultType="com.example.shelter.model.Admin">
        SELECT
	        *
        FROM
	        T_ADMIN
    </select>
<!--    根据用户名查询密码-->
    <select id="getPassword" resultType="string">
        SELECT
	        password
        FROM
	        T_ADMIN
        WHERE
	        name = #{name}
    </select>
</mapper>